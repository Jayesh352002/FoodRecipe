<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MalaiKofta"
        android:background="#E56717">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kaju Masala "
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/black"/>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/kaju"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="काजू मसाला रेसिपी | kaju masala in hindi | काजू करी रेसिपी"
            android:layout_marginTop="290dp"
            android:textSize="23dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s1"
            android:textSize="20dp"
            android:text="सामग्री"/>
        <TextView
            android:id="@+id/s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s2"
            android:text="1 टेबल स्पून घी"/>
        <TextView
            android:id="@+id/s4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s3"
            android:text="⅔ कप काजू, पूरी"/>
        <TextView
            android:id="@+id/s5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s4"
            android:text="2 टी स्पून तेल"/>
        <TextView
            android:id="@+id/s6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s5"
            android:text="1 टी स्पून जीरा"/>
        <TextView
            android:id="@+id/s7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s6"
            android:text="1 इंच दालचीनी स्टिक"/>
        <TextView
            android:id="@+id/s8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s7"
            android:textSize="15dp"
            android:text="दाल चीनी - ½इंच का टुकड़ा"/>
        <TextView
            android:id="@+id/s9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s8"
            android:text="½ प्याज, बारीक कटा हुआ"/>
        <TextView
            android:id="@+id/s10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s9"
            android:text="राई - ½ चम्मच"/>
        <TextView
            android:id="@+id/s11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s10"
            android:textSize="15dp"
            android:text="1 बे पत्ती / तेज पत्ता"/>
        <TextView
            android:id="@+id/s12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s11"
            android:text="½ टी स्पून हल्दी"/>
        <TextView
            android:id="@+id/s13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s12"
            android:textSize="15dp"
            android:text="लाल मिर्च पाउडर - 1 चम्मच"/>
        <TextView
            android:id="@+id/s14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s13"
            android:text="1 टी स्पून कश्मीरी लाल मिर्च पाउडर"/>
        <TextView
            android:id="@+id/s15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s14"
            android:text="½ टी स्पून धनिया पाउडर"/>
        <TextView
            android:id="@+id/s16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s15"
            android:text="½ टी स्पून नमक, या स्वाद के लिए"/>
        <TextView
            android:id="@+id/s17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s16"
            android:text="1 कप पानी"/>
        <TextView
            android:id="@+id/s18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s17"
            android:text="¼ कप क्रीम / मलाई"/>
        <TextView
            android:id="@+id/s19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s18"
            android:text="½ टी स्पून गरम मसाला"/>
        <TextView
            android:id="@+id/s20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s19"
            android:text="1 टी स्पून कसूरी मेथी , कुचली हुई"/>
        <TextView
            android:id="@+id/s21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s20"
            android:textSize="15dp"
            android:text="1 टेबल स्पून धनिया पत्ती, बारीक कटी हुई"/>
        <TextView
            android:id="@+id/s22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/s21"
            android:text="प्याज टमाटर के पेस्ट के लिए:"/>
        <TextView
            android:id="@+id/s23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s22"
            android:textSize="15dp"
            android:text="1 टी स्पून तेल"/>
        <TextView
            android:id="@+id/s24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s23"
            android:textSize="15dp"
            android:text="1 प्याज, बारीक कटा हुआ"/>
        <TextView
            android:id="@+id/s25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s24"
            android:textSize="15dp"
            android:text="3 बड़े टमाटर, बारीक कटा हुआ"/>
        <TextView
            android:id="@+id/s26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/s25"
            android:textSize="15dp"
            android:text="1 टी स्पून अदरक-लहसुन का पेस्ट"/>

        <TextView
            android:id="@+id/s27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/s26"
            android:textSize="20dp"
            android:text="बनाने की विधि - How to make काजू मसाला रेसिपी (Kaju Masala)"/>
        <TextView
            android:id="@+id/s28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@+id/s27"
            android:layout_marginTop="10dp"
            android:text="सबसे पहले काजू को एक टेबलस्पून घी में सुनहरा भूरा होने तक भूनें। एक प्लेट में स्थानांतरण करें। एक टीस्पून तेल गर्म करके टमाटर प्याज का पेस्ट तैयार करें। 1 प्याज डालें और अच्छी तरह से साट करें इसके अलावा, 1 टीस्पून अदरक-लहसुन का पेस्ट डालकर भूनें। 3 बड़े टमाटर भी डालें। 5-6 काजू डालें और टमाटर के नरम होने तक फ्राई करें। िश्रण को पूरी तरह से ठंडा होने दें, और बाद में एक ब्लेंडर में स्थानांतरित करें।"/>

        <TextView
            android:id="@+id/s29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@+id/s28"
            android:layout_marginTop="10dp"
            android:text="बिना अतिरिक्त पानी डालके, स्मूथ पेस्ट में ब्लेंड करें। एक तरफ रख दीजिए। उसी कड़ाही में एक टीस्पून तेल गरम करें और उसमें 1 टीस्पून जीरा, 1 इंच दालचीनी स्टिक और 1 बे पत्ती डालें। खुशबूदार होने तक फ्राई करें। आगे ½ प्याज डालें और अच्छी तरह से भूने तैयार किया टमाटर प्याज के पेस्ट डालें और पेस्ट गाढ़ा होने तक पकाएं।"/>
        <TextView
            android:id="@+id/s30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@+id/s29"
            android:layout_marginTop="10dp"
            android:text="मसालों को तेल आने तक भूंजे जब मसाला भूंज जाए तब हम इसमें दूध डालेंगे और इसे चलाते हुए उबाल आने तक पकाएंगे। अब हम सब्जी में नमक डाल देंगे नमक थोड़ा कम ही डाले क्यों कि सेव में  नमक होता है।"/>
        <TextView
            android:id="@+id/s31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@+id/s30"
            android:layout_marginTop="10dp"
            android:text="आंच को कम रखते हुए, ½ टीस्पून हल्दी, 1 टीस्पून लाल मिर्च पाउडर, ½ टीस्पून धनिया पाउडर और ½ टीस्पून नमक डालें। धीमी आंच पर एक मिनट के लिए भूनें। अब 1 कप पानी और ¼ कप क्रीम मिलाएं। क्रीम को अच्छी तरह से मिलाने तक लगातार हिलाएं।"/>
        <TextView
            android:id="@+id/s32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@+id/s31"
            android:layout_marginTop="10dp"
            android:text="आगे भुने हुए काजू डालें और अच्छी तरह हिलाएँ। 5 मिनट के लिए या ग्रेवी के थोड़ा गाढ़ा होने तक ढक्कन लगाके पकाएं। ½ टीस्पून गरम मसाला, 1 टीस्पून कसूरी मेथी और 1 टेबलस्पून धनिया पत्ती डालें। अंत में, काजू मसाला या काजू कढ़ी को रोटी या चपाती के साथ सर्व करें।"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video on Kaju Masala Recipe"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/s32"
            android:drawableLeft="@drawable/ic_video"/>
        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="Play Video"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="250dp"
            android:drawableLeft="@drawable/ic_video"
            android:id="@+id/b1"/>
    </RelativeLayout>
</ScrollView>