        <TextView
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1040dp"
            android:textSize="20dp"
            android:text="बनाने की विधि - How to make Channa Butter Masala"/>

        <TextView
            android:id="@+id/s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/s1"
            android:textSize="15dp"
            android:text="सबसे पहले, एक बड़े कटोरे में 1 कप छोले लें और 8 घंटे के लिए पर्याप्त पानी में भिगोएँ। भीगे हुए चनों को प्रेशर कुकर में स्थानांतरित करें। ¼ टीस्पून बेकिंग सोडा, ¾ टीस्पून नमक और 3 कप पानी डालें। प्रेशर कुक को 5 से 6 सीटी तक या चना अच्छी तरह से पकने तक पकाएं।"/>
        <TextView
            android:id="@+id/s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_below="@+id/s2"
            android:text="सबसे पहले, एक पैन में ¼ कप धनिया के बीज, ¼ कप जीरा, 2 टीस्पून काली मिर्च, 1 टीस्पून लौंग, 2 फली काली इलायची, 2 इंच दालचीनी, 1 जावित्री, 1 टीस्पून सौंफ, 1 टीस्पून शाह जीरा लें। धीमी आंच पर भूनें जब तक मसाला खुशबूदार न हो जाए। आगे 10 सूखी लाल मिर्च डालें और तब तक भूने जब तक मिर्च फूल कर कुरकुरे न हो जाए। पूरी तरह से ठंडा करें और मिक्सी में स्थानांतरित करें।"/>
        <TextView
            android:id="@+id/s4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_below="@+id/s3"
            android:text="2 टेबलस्पून आमचूर, 2 टेबलस्पून कसूरी मेथी और 1 टीस्पून हल्दी डालें। बिना पानी मिलाए बारीक पाउडर के लिए ब्लेंड करें। छोले मसाला पाउडर तैयार है। लंबे समय तक शैल्फ जीवन के लिए एक एयरटाइट कंटेनर में स्टोर करें।"/>
        <TextView
            android:id="@+id/s5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_below="@+id/s4"
            android:text="सबसे पहले, एक बड़ी कड़ाई में 2 टेबलस्पून घी को गरम करें और उसमें 3 फली इलायची, 1 तेज पत्ता, 1 टीस्पून जीरा डालें और मसाले को सुगंधित होने तक तलें। 1 प्याज, 1 मिर्च, 1 टीस्पून अदरक लहसुन का पेस्ट डालें और प्याज को सुनहरा भूरा होने तक तलें। इसके अलावा 1 टेबलस्पून तैयार छोले मसाला और ½ टीस्पून नमक के डालें। धीमी आंच पर तब तक तलें जब तक मसाला सुगंधित न हो जाए। अब 2 कप टमाटर प्यूरी डालें और अच्छी तरह मिलाएँ। टमाटर की प्यूरी तैयार करने के लिए, दो पके हुए टमाटरों को बिना किसी पानी जोड़े चिकनी पेस्ट के लिए ब्लेंड करें।"/>
        <TextView
            android:id="@+id/s6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/s5"
            android:textSize="15dp"
            android:text="जब तक मसाला पेस्ट से तेल अलग न हो जाए तब तक तलें। अब प्रेशर कुक हुआ चना उसमें मिलाएं और आवश्यकतानुसार अच्छी तरह से समायोजित स्थिरता मिलाएं। ढककर और 10 मिनट के लिए उबालें या जब तक कि फ्लेवर अच्छी तरह से अवशोषित न हो जाए। अंत में, 2 टेबलस्पून धनिया डालें और रोटी, पूरी या गर्म उबले चावल के साथ चना मसाला का आनंद लें।"/>
        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s6"
            android:text="Video on Channa Butter Masala Recipe"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_video"/>
